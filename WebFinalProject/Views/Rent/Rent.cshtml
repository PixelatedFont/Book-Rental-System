@model WebFinalProject.ViewModels.RentViewModel


<style>
    body {
        padding-top: 100px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        background-color: #f0ece4;
    }
</style>
<body>
    <h2>RENT CHECKOUT</h2>
</body>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        <dl class="dl-horizontal">


            <dt>
                @Html.DisplayNameFor(model => model.RentDate1)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RentDate1)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DueDate1)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DueDate1)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Deposit1)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Deposit1) VND
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cost1)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cost1) VND
            </dd>

        </dl>
        <div class="form-group">
            @Html.LabelFor(model => model.Note1, new { HtmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Note1, new { HtmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <input type="button" class="btn btn-primary" value="Back to list" onclick="location.href='@Url.Action("BookList", "Book")'" />
            <input type="submit" value="Rent" class="btn btn-primary" />
        </div>
        @if (Convert.ToBoolean(Session["IsAdmin"]) == true)
        {
            <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index", "Rent")'" />
        }

    </div>


}
