@model WebApplication3.ViewModels.UserViewModel

<style>
    body {
        padding-top: 100px;
        font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        background-color:#f0ece4;
    }
</style>
<body>
    <h2>Login</h2>
</body>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.UserName1, new { HtmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.UserName1, new { HtmlAttributes = new { @class = "form-control" } })

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserPassword1, new { HtmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.UserPassword1, new { HtmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <p>@Html.RadioButtonFor(model => model.RoleID1, 1) @Html.Label("Admin") &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp  @Html.RadioButtonFor(model => model.RoleID1, 2) @Html.Label("Customer")</p>

        </div>

        <div class="form-group">
            <input type="submit" class="btn-block btn-primary btn-lg" value="login" />
        </div>

    </div>
}

