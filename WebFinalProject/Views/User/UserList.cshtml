@model IEnumerable<WebFinalProject.Models.UserInfoTable>

@{
    ViewBag.Title = "UserList";
}
<style>
    body {
        padding-top: 100px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        background-color: #f0ece4;
    }
</style>
<body>
    <h2 class="text-muted">REGISTERED USERS</h2>
</body>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.U_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.U_PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.U_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserTable.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.U_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.U_PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.U_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserTable.UserName)
            </td>
            <td>
                <div class="btn-group-sm">
                    <input type="button" class="btn btn-primary" value="Edit" onclick="location.href='@Url.Action("Edit", "User", new { id = item.UserID })'" />
                    <input type="button" class="btn btn-primary" value="Detail" onclick="location.href='@Url.Action("Detail", "User", new { id = item.UserID })'" />
                    <input type="button" class="btn btn-primary" value="Remove" onclick="location.href='@Url.Action("Remove", "User", new { id = item.UserID })'" />
                </div>
            </td>
        </tr>
    }

</table>
