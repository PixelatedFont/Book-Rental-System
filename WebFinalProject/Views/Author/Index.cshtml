@model IEnumerable<WebFinalProject.Models.AuthorTable>

<style>
    body {
        padding-top: 100px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        background-color: #f0ece4;
    }
</style>
<body>
    <h2 class="text-muted">AUTHOR LIST</h2>
</body>

<p>
    <input type="button" class="btn btn-primary" value="Create New Author" onclick="location.href='@Url.Action("Create", "Author")'" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                <div class="btn-group-sm">
                    <input type="button" class="btn btn-primary" value="Edit" onclick="location.href='@Url.Action("Edit", "Author", new { id = item.AuthorID })'" />
                    <input type="button" class="btn btn-primary" value="Detail" onclick="location.href='@Url.Action("Detail", "Author", new { id = item.AuthorID })'" />
                    <input type="button" class="btn btn-primary" value="Remove" onclick="location.href='@Url.Action("Remove", "Author", new { id = item.AuthorID })'" />
                </div>
            </td>
        </tr>
    }

</table>
