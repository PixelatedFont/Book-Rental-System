@model IEnumerable<WebApplication3.Models.RentDetailTable>

@{
    ViewBag.Title = "UserRentList";
}

<h2>UserRentList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deposit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookDetailTable.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookTable.BookID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentTable.RentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserTable.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.RentDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DueDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReturnDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cost)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Paid)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Deposit)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Note)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BookDetailTable.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BookTable.BookID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RentTable.RentID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserTable.UserName)
    </td>
    <td>
        <div class="btn-group-sm">
            <input type="button" class="btn btn-primary" value="Detail" onclick="location.href='@Url.Action("RentDetail", "Rent", new { id = item.RentID })'" />
        </div>
    </td>
</tr>
}

</table>
