@model IEnumerable<WebApplication3.Models.BookTable>

<style>
    .godown {
        padding-top: 30px;
    }
</style>

<h2 class="godown">Book List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookDetailTable.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookDetailTable.Title)
            </td>
            @if (Session["UserID"] != null)
            {
                <td>
                    <div class="btn-group-sm">
                        <input type="button" class="btn btn-primary" value="Rent" onclick="location.href='@Url.Action("Rent", "Rent", new { id = item.BookID })'" />
                    </div>
                </td>
            }
        </tr>
    }

</table>
